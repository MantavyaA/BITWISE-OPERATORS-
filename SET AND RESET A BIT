#include <iostream>
using namespace std;

int main() {
    int number, bitPosition;

    cout << "Enter a number: ";
    cin >> number;

    cout << "Enter bit position to modify : ";
    cin >> bitPosition;

    int setResult = number | (1 << bitPosition);
    cout << "After setting bit " << bitPosition << ": " << setResult << endl;

    int resetResult = number & ~(1 << bitPosition);
    cout << "After resetting bit " << bitPosition << ": " << resetResult << endl;

    return 0;
}


//OUTPUT : 
Enter a number: 10
Enter bit position to modify : 1
After setting bit 1: 10
After resetting bit 1: 8
